<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="0dp"
    android:padding="0dp"
    tools:context=".TimerActivity">


    <ImageView
        android:id="@+id/Ieremie_Gabriela_ImgView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="0dp"
        android:src="@drawable/header"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <Chronometer
        android:id="@+id/Ieremie_Gabriela_Chrono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="25dp"
        android:textSize="70sp"
        android:background="@drawable/bg"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <ToggleButton
        android:id="@+id/Ieremie_Gabriela_tbtn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="0dp"
        android:background="@drawable/start_pause_btn_bg"
        app:layout_constraintBottom_toTopOf="@id/Grigoras_Stefan_bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Ieremie_Gabriela_Chrono"/>

    <ImageButton
        android:id="@+id/Ieremie_Gabriela_btn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/reset_button"
        app:layout_constraintBottom_toBottomOf="@+id/Ieremie_Gabriela_tbtn"
        app:layout_constraintStart_toEndOf="@+id/Ieremie_Gabriela_tbtn"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/Grigoras_Stefan_bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_shadow_end_color"
        android:elevation="2dp"
        app:labelVisibilityMode="labeled"
        android:layout_margin="20dp"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>