<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/Grigoras_Stefan_bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/cardview_shadow_end_color"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:elevation="2dp"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"/>

    <TextView
        android:id="@+id/Ion_Denis_userNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:text="Nume" />

    <TextView
        android:id="@+id/Ion_Denis_userSurnameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Ion_Denis_userNameView"
        android:layout_marginTop="2dp"
        android:layout_marginStart="55dp"
        android:text="Prenume" />

    <ListView
        android:id="@+id/Grigoras_Stefan_activitiesLv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Ion_Denis_userSurnameView"
        android:layout_above="@id/Grigoras_Stefan_bottomNavigationView"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

</RelativeLayout>